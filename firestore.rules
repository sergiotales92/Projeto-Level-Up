rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Regra 1: Coleção de Jogos
    match /games/{gameId} {
      allow read: if true;
      allow write: if false; // Ninguém pode escrever diretamente aqui
    }

    // NOVA REGRA: Coleção de Avatares
    // Permite que qualquer usuário autenticado leia a lista de avatares.
    match /avatar/{avatarId} {
      allow read: if request.auth != null;
      allow write: if false; // Apenas para segurança, assumindo que você adiciona avatares manualmente
    }

    // Regra 2: Coleção de Usuários
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth.uid == userId;
    }

    // Regra 3: Pedidos de Amizade
    match /pedidosAmizade/{requestId} {
      allow read, write: if request.auth != null;
    }

    // Regra 4: Nicknames
    match /nicknames/{nickname} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Regra 5: Conversas (Chat)
    match /conversations/{conversationId}/{message=**} {
      allow read, write: if request.auth != null;
    }

    // REGRA 6: POSTS (VERSÃO FINAL COM A CORREÇÃO)
    match /posts/{postId} {
      allow count: if request.auth != null;
      allow read: if request.auth != null;
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow update: if request.auth != null && (
        (request.auth.uid == resource.data.userId) ||
        (request.resource.data.diff(resource.data).affectedKeys().hasOnly(['likes', 'comments']))
      );
      allow delete: if request.auth != null && resource.data.userId == request.auth.uid;
    }
  }
}